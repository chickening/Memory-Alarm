<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewMemoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->

        <EditText
            android:id="@+id/tf_content_new_memory_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/cornered_rectangle"
            android:elevation="10dp"
            android:ems="10"
            android:hint="제목"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:padding="8dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tf_content_new_memory_content"
            android:layout_width="match_parent"
            android:layout_height="461dp"
            android:layout_margin="8dp"
            android:background="@android:color/white"
            android:gravity="start"
            android:hint="내용을 입력해주세요"
            android:padding="8dp"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button_content_new_memory_make_memory"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_margin="8dp"
            android:background="@color/design_default_color_primary"
            android:padding="8dp"
            android:text="기억 만들기"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>